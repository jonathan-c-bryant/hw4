<h1><%= @place.name %></h1>



<% if @current_user %>

<h2>My Posts</h2>

  <% for post in @place.posts.where({ user_id: session[:user_id] }) %>
      <h3><%= "#{post.title}" %></h3>
      <%= "#{post.posted_on}" %>
      <br>
      <%= "#{post.description}" %>
  <% end %>

<p>
  <a class="btn btn-dark" href="/posts/new?place_id=<%= @place.id %>" role="button">New Post</a>
</p>

<% end %>





<p>
  <a href="/places">Back to All Places</a>
</p>
