<h1 class="text-uppercase text-center pt-4"><%= @place.name %></h1>



<% if @current_user %>

<h3 class="text-center pt-4" >My Posts</h3>



<div class="row pt-4">
  <% for post in @place.posts.where({ user_id: session[:user_id] }) %>
    <div class="col-sm-4 pt-4 pb-4">

      <div class="col text-center">
        <h5><%= "#{post.title}" %></h5>  
      
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image)%>" class="img-fluid">
      <% else %>
      <% end %>
      
      
      <%= "#{post.posted_on}" %>
      <p>
      <%= "#{post.description}" %>
      </p>
           </div>  
      </div>
  <% end %>
</div>




<p>
  <a class="btn btn-dark" href="/posts/new?place_id=<%= @place.id %>" role="button">New Post</a>
</p>

<% end %>





<p>
  <a href="/places">Back to All Places</a>
</p>
